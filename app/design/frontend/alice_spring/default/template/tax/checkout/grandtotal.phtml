  <?php echo $this->renderTotals('taxes', $this->getColspan()); ?>

<?php else:?>
  <dl class="grandtotal">
    <dt><?php echo $this->getTotal()->getTitle() ?></dt>
    <dd><?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?></dd>
  </dl>

<?php endif;?>
