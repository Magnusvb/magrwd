    <dd><?php echo $this->helper('checkout')->formatPrice($this->getTotalExclTax()) ?></dd>

    <dt><?php echo $this->helper('tax')->__('Grand Total Incl. Tax')?></dt>
    <dd><?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?></dd>
